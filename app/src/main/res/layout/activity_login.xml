<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgourndlogin"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="241dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopanda" />

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/white"
        android:hint="Số điện thoại"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <!-- EditText để nhập mật khẩu -->
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/txtPhoneNumber"
        app:layout_constraintStart_toStartOf="@id/txtPhoneNumber"
        app:layout_constraintTop_toBottomOf="@id/txtPhoneNumber" />
    <!-- TextView hiển thị thông báo lỗi -->
    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/maincolor"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtPassword"
        app:layout_constraintStart_toStartOf="@id/txtPassword"
        app:layout_constraintEnd_toEndOf="@id/txtPassword"/>

    <!-- TextView hiển thị thông báo lỗi -->


    <!-- Button để thực hiện đăng nhập -->


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_custom"
        android:backgroundTint="@color/maincolor"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="@dimen/mainfontsize"
        app:layout_constraintEnd_toEndOf="@id/txtPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/txtPassword"
        app:layout_constraintTop_toBottomOf="@id/txtPassword" />

    <!-- LinearLayout chứa thông báo và nút đăng ký -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="@id/btnLogin"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintVertical_bias="0.888">
        <!-- TextView hiển thị thông báo -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textColor="@color/white" />

        <!-- TextView để chuyển sang màn hình đăng ký -->
        <TextView
            android:id="@+id/buttonToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FF0000"
            android:text="Đăng ký"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/seconfontsize" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
