<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgourndlogin"
    tools:context=".view.LoginActivity"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopanda" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFildPhone"
        style="@style/MyTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/maincolor"
        app:counterEnabled="false"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPhoneNumber"
            style="@style/MyTextInputEditTextStyle"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại" />
    </com.google.android.material.textfield.TextInputLayout>

        <!-- EditText để nhập mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFildPass"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/maincolor"
        app:counterEnabled="false"
        app:hintTextColor="@color/white"
        style="@style/MyTextInputLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFildPhone"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPassword"
            style="@style/MyTextInputEditTextStyle"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="Mật khẩu" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/maincolor"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/textFildPass"
        app:layout_constraintStart_toStartOf="@id/textFildPass"
        app:layout_constraintEnd_toEndOf="@id/textFildPass"/>

    <!-- Button để thực hiện đăng nhập -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_custom"
        android:backgroundTint="@color/maincolor"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="@dimen/mainfontsize"
        app:layout_constraintEnd_toEndOf="@id/textFildPass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/textFildPass"
        app:layout_constraintTop_toBottomOf="@id/textFildPass" />
    <!-- LinearLayout chứa thông báo và nút đăng ký -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="@id/btnLogin"
        app:layout_constraintTop_toBottomOf="@id/btnLogin">
        <!-- TextView hiển thị thông báo -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textColor="@color/white" />

        <!-- TextView để chuyển sang màn hình đăng ký -->
        <TextView
            android:id="@+id/buttonToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FF0000"
            android:text="Đăng ký"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/seconfontsize" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
