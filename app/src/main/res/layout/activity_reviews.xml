<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/maincolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backReviewBtn"
            android:layout_width="41dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/left_arrow"

            />

        <TextView
            android:layout_width="186dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="REVIEWS"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="661dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Stars:"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/Rstar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />
            <ImageView
                android:id="@+id/Rstar2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />
            <ImageView
                android:id="@+id/Rstar3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />
            <ImageView
                android:id="@+id/Rstar4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />
            <ImageView
                android:id="@+id/Rstar5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Your comments:"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập comment của bạn"
            style="@style/MyTextInputLayoutStyle">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextInputEditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/submitBtn"
            android:layout_width="389dp"
            android:layout_height="72dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_cutstom_pressd"
            android:text="Submit your review"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>