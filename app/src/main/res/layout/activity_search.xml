<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_background"
    >


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="52dp"
        android:text="Hi,Cuong"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:shadowColor="@color/black"
        android:text="What can we serve you today?"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="Search for food"
        android:textColor="#C4C4C4"
        android:paddingLeft="50dp"
        android:textFontWeight="400"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/border"

        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/search_icon1"
        android:layout_width="24dp"
        android:layout_height="20dp"

        android:background="@drawable/search_cook_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="695dp" />

    <TextView
        android:id="@+id/search_icon2"
        android:layout_width="16dp"
        android:layout_height="20dp"

        android:background="@drawable/seacrh_icon1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="695dp" />

    <TextView
        android:id="@+id/search_icon3"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:background="@drawable/search_icon2"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="695dp" />

    <TextView
        android:id="@+id/search_icon4"
        android:layout_width="16dp"
        android:layout_height="20dp"

        android:background="@drawable/search_icon3"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="695dp" />



    <TextView
        android:id="@+id/search_icon5"
        android:layout_width="16dp"
        android:layout_height="20dp"

        android:background="@drawable/search_icon4"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="695dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/corner_round"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText"
        app:layout_constraintTop_toTopOf="@+id/editTextText"
        app:srcCompat="@drawable/search_glass1"
        tools:layout_editor_absoluteX="58dp"
        tools:ignore="MissingConstraints"
        android:outlineProvider="none"/>


</androidx.constraintlayout.widget.ConstraintLayout>