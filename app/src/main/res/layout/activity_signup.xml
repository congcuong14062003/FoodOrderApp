<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgourndlogin"
    tools:context=".view.SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopanda" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="@color/white"
                app:layout_constraintStart_toStartOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextName"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:hint="Họ và tên" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/errorMessageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea2e0e"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="644dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxBackgroundColor="@color/maincolor"
                app:boxStrokeColor="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editSDT"
                    android:layout_width="match_parent"
                    android:hint="Số điện thoại"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:layout_height="50dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/errorMessageSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea2e0e"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="644dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxBackgroundColor="@color/maincolor"
                app:boxStrokeColor="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:hint="Địa chỉ" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/errorMessageAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea2e0e"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="644dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxBackgroundColor="@color/maincolor"
                app:boxStrokeColor="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:hint="Mật khẩu" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/errorMessagePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea2e0e"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="644dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxBackgroundColor="@color/maincolor"
                app:boxStrokeColor="@color/white"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editRepeatPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:hint="Nhắc lại mật khẩu" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/errorMessageRepeatPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea2e0e"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="644dp" />
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/buttonResign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_custom"
        android:backgroundTint="@color/maincolor"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:textSize="@dimen/mainfontsize"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="24dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/buttonToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:backgroundTint="#00FF0000"
            android:text="Đăng nhập"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/seconfontsize" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>