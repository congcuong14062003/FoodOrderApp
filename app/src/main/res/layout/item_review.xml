<!-- res/layout/food_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mainborder"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHistory"
            android:layout_width="80dp"
            app:cardCornerRadius="10dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:id="@+id/avtUserReview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/testitem"
                android:scaleType="centerCrop"
                android:background="@drawable/mainborder"
                />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/productInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardViewHistory"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/nameUserReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiêu Công Cường"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/rvstar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/rvstar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/rvstar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/rvstar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/rvstar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/date_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14-04-2024"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/content_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ăn ngon lắm nghen shop"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/cardViewHistory"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="#FAF7F7"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
