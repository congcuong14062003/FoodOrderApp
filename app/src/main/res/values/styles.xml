<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Các thuộc tính của style ứng dụng của bạn -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Style cho TextInputLayout -->
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Thiết lập màu sắc cho viền -->
        <item name="boxStrokeColor">#FF0000</item>

        <!-- Thiết lập màu sắc cho văn bản hint -->
        <item name="android:textColorHint">#00FF00</item>
    </style>

    <!-- Style cho TextInputEditText -->
    <style name="MyTextInputEditTextStyle" parent="@android:style/Widget.EditText">
        <!-- Thiết lập màu sắc cho văn bản nhập -->
        <item name="android:textColor">#0000FF</item>

        <!-- Thiết lập kích thước cho văn bản nhập -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>