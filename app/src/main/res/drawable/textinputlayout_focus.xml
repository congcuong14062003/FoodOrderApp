<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu khi TextInputLayout được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/maincolor" /> <!-- Màu border bottom khi focus -->
        </shape>
    </item>
    <!-- Màu mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Màu border bottom khi không focus -->
        </shape>
    </item>
</selector>
